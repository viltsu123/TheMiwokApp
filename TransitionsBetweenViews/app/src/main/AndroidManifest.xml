<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.viltsu.transitionsbetweenviews">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".numberActivity"
            android:label="@string/numbers"
            android:parentActivityName=".MainActivity"/>
        <activity android:name=".parentsActivity"
            android:label="@string/parents"
            android:parentActivityName=".MainActivity"/>
        <activity android:name=".childActivity"
            android:label="@string/children"
            android:parentActivityName=".MainActivity"/>
        <activity android:name=".colorActivity"
            android:label="@string/colors"
            android:parentActivityName=".MainActivity"></activity>
    </application>

</manifest>